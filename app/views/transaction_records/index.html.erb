<h1>Listing transaction_records</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Transaction date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_records.each do |transaction_record| %>
      <tr>
        <td><%= transaction_record.user %></td>
        <td><%= transaction_record.transaction_date %></td>
        <td><%= link_to 'Show', transaction_record %></td>
        <td><%= link_to 'Edit', edit_transaction_record_path(transaction_record) %></td>
        <td><%= link_to 'Destroy', transaction_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction record', new_transaction_record_path %>
