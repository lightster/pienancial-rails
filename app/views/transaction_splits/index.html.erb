<h1>Listing transaction_splits</h1>

<table>
  <thead>
    <tr>
      <th>Transaction record</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_splits.each do |transaction_split| %>
      <tr>
        <td><%= transaction_split.transaction_record %></td>
        <td><%= transaction_split.amount %></td>
        <td><%= transaction_split.description %></td>
        <td><%= link_to 'Show', transaction_split %></td>
        <td><%= link_to 'Edit', edit_transaction_split_path(transaction_split) %></td>
        <td><%= link_to 'Destroy', transaction_split, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction split', new_transaction_split_path %>
